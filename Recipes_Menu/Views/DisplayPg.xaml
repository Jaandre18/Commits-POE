<Page x:Class="Recipes_Menu.Views.DisplayPg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Recipes_Menu.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DisplayPg">

    <Grid Background="White">
        <ComboBox x:Name="RecipeComboBox" Width="200" Height="30" VerticalAlignment="Top" SelectedIndex="-1" SelectionChanged="RecipeComboBox_SelectionChanged" Margin="300,90,300,0" />
        <Label Content="What recipe whould you like to display?" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,172,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox Name="RecipeInfoTextBox" Width="300" Height="200" VerticalAlignment="Top" Margin="250,209,250,0" TextWrapping="Wrap" IsReadOnly="True" />
    </Grid>
</Page>
